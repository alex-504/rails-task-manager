<div class="container">
  <h1><%= @task.title %></h1>
  <p><%=  @task.details %></p>
  <%= link_to '🏠Home', tasks_path, class: 'btn btn-info' %>
  <%= link_to '🧷Edit', edit_task_path, class: 'btn btn-info btn-warning' %>
  <%= link_to '🗑 Delete', task_path(@task), class: 'btn btn-info btn-danger', method: :delete, data: { confirm: "Delete #{@task.title}?" } %>
</div>