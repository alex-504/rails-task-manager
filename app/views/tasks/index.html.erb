<h1>All Tasks</h1>

<div class="list-group">
<%  @tasks.each do |task| %>
  <%= link_to task.title, task_path(task), class: "list-group-item list-group-item-action" %> 
  <% end%>

  <%= link_to '🏠 Home', tasks_path, class: 'btn btn-info btn-dark' %>
  <%= link_to '➕ Add New Task ', new_task_path, class: 'btn btn-info' %>
</div>
